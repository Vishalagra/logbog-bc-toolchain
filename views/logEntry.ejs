<html>
<head>
<meta charset="utf-8">
<title>Welcome to Logbog Entry</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="css/skat.min.css" rel="stylesheet">
<link href="css/guide.css" rel="stylesheet" type="text/css" />
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script
	src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script src="js/controller.js" type="text/javascript"></script>
</head>
<body ng-app="entryModal">

	<nav class="navbar navbar-inverse navbar-static-top">
	
	  <header>
              <div class="skts-logo">
                    <a href="index.ejs"><br/></a>
                </div>
               <div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<h3 class="skts-header-link">LogBog App</h3>
		</div>
		<a class="skts-login pull-right" href="/"><h3>Log af</h3></a>
	 </div>
    		</header>
    	</nav>
	
		<div class="skts-breadcrumb-container">
		        
         <ol class="breadcrumb container">
                    <li>Home</li>
                     <li class="active">LogEntry</li>
                </ol>
		
        </div>
	
	<div>
		<h4>
			<p><%= tagline %></p>
		</h4>
	</div>
	<hr>
	<div>
	
		<h4>
			User Name: <%= user %>
			
			<br> Senr: <%= senr %>
		</h4>
	</div>
	<hr>
	<div ng-controller="EntryCtrl" class="container">
		<!-- <table class="table table-striped table-bordered dataQueryTable">
			<tr ng-repeat="item in title">
				<td><input type="text" class="form-control"
					value="{{item.title}}" disabled="disabled" /></td>
			</tr>
		</table> -->

		<form name="entryForm" role="form" action="/logEntry" method="post">
			<div class="form-group">
				<table class="table table-striped table-bordered dataEntryTable">
					<thead>
						<tr>
							<th>CPR Nummer</th>
							<th>CPR Navn</th>
							<th>Date</th>
							<th>Duration</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="personalDetail in personalDetails">

							<td><input type="text" class="form-control"
								ng-model="personalDetail.cpr" name ="cpr" required /></td>
								
							<td><input type="text"  class="form-control"
								ng-model="personalDetail.navn" name ="navn" required /></td>
								
							<td><input type="text" class="form-control"
								ng-model="personalDetail.date" name ="date" required /></td>
								
							<td><input type="text" class="form-control"
								ng-model="personalDetail.duration" name ="duration" required /></td>
								
							<td><input ng-hide="!personalDetails.length" type="button"
								class="btn btn-danger" ng-click="removeRow($index)"
								value="Remove"></td>
						</tr>
					</tbody>
				</table>

				<div class="form-group">
					<input type="button" class="btn btn-default pull-right"
						ng-click="addNew()" value="Add New">
					<button type="submit" ng-click="submit()"
						class="btn btn-primary pull-right">Submit Data</button>
				</div>

			</div>

		</form>
	</div>

</body>
</html>